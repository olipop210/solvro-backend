generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cocktail {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  instruction String
  description String
  category    String
  alcoholic   Boolean
  photoURL    String
  createdAt   DateTime @default(now())

  Ingredients    Ingredient[] @relation(fields: [IngredientsIDs], references: [id])
  IngredientsIDs String[]     @db.ObjectId

  IngredientAmounts String[]
}

model Ingredient {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  isAlcohol   Boolean
  photoURL    String

  Cocktails    Cocktail[] @relation(fields: [CocktailsIDs], references: [id])
  CocktailsIDs String[]   @db.ObjectId
}
